<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>	

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/countries/add" method="post" name="form1">
	<table width="25%" border="0" id="countries">
		<tr> 
			<td>Name</td>
			<td><input type="text" name="name" id="name" value="<%= name %>" /></td>
		</tr>
		<tr> 
			<td>Tld</td>
			<td><input type="text" name="tld" id="tld" value="<%= tld %>" /></td>
		</tr>
		<tr> 
			<td>Cca2</td>
			<td><input type="text" name="cca2" id="cca2" value="<%= cca2 %>" /></td>
		</tr>
		<tr> 
			<td>Capital</td>
			<td><input type="text" name="capital" id="capital" value="<%= capital %>" /></td>
		</tr>
		<tr> 
			<td>Callingcode</td>
			<td><input type="text" name="callingCode" id="callingcode" value="<%= callingCode %>" /></td>
		</tr>
		<tr> 
			<td></td>
			<td><input type="submit" name="Submit" value="Add" /></td>
		</tr>
	</table>
</form>

